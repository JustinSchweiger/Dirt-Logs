<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>DirtCraft Log File</title>
	<link rel="icon" type="image/png" href="https://i.imgur.com/urgzbbr.png">
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body>
<div class="wrapper">
	<div id="rows">
		<!-- Rows -->
	</div>
	<div id="log-wrapper">
		<!-- Log -->
	</div>
</div>
<img id="logo" src="https://i.imgur.com/urgzbbr.png" alt="DirtCraft Logo">
<script>
	const logFile = <%- JSON.stringify(log) %>
	const lines = logFile.split(/\r\n|\r|\n/).length;

	const rows = document.getElementById('rows');

	for (let i = 1; i <= lines; i++) {
		const rowElement = document.createElement('p');
		rowElement.textContent = i.toString();
		rows.appendChild(rowElement);
	}

	const logWrapper = document.getElementById('log-wrapper');
	logWrapper.innerText = logFile;
</script>
</body>
</html>